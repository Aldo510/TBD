<section id="hero">
  <div id="heroCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">

    <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

    <div class="carousel-inner" role="listbox">

      <!-- Slide 1 -->
      <div class="carousel-item active" id="item1">
        <div class="carousel-container">
          <div class="container w-50">
            <h2 class="animated fadeInDown">¿Intersado en una propiedad?</h2>
            <p class="animated fadeInUp">Mira sus reseñas</p>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Direccion" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </div>

      <!-- Slide 2 -->
      <div class="carousel-item" id="item2">
        <div class="carousel-container">
          <div class="container">
            <h2 class="animated fadeInDown">Califica las propiedades</h2>
            <a href="#about" class="btn-get-started animated fadeInUp scrollto">Ver propiedades</a>
          </div>
        </div>
      </div>

    </div>

    <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
      <i class="bi bi-chevron-left"></i>
    </a>
    <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
      <i class="bi bi-chevron-right"></i>
    </a>

  </div>
</section><!-- End Hero -->
<section id="home" class="container-fluid">
  <div class="row">
    <div class="col-10 mx-auto py-5">
      <h1 class="text-center">Propiedades</h1>
      <%if current_user%>
      <h4>Hola <%= current_user.username%></h4>
      <%end%>
      <div class="container-fluid">
        <div class="row">
          <%@properties.each do |property|%>
          <div class="col-12 col-sm-6 col-md-4 col-xl-3">
            <div class="card">
              <img src="<%= property.image %>" class="card-img-top" alt="">
              <div class="card-body">
                <h5><%= property.name %></h5>
                <p class="card-text"><p><%= property.description %></p>
                <p class="card-text"><p><%= property.address %></p>
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
      
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <p class="card-text">Calificación: <%= property.rating %></p>
                <%= link_to property_show_path(property.id) do %>
                <div class="btn btn-secondary">
                  <i class="bi bi-eye"></i> Ver propiedad
                </div>
                <% end %>      
              </div>
            </div>
          </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</section>
