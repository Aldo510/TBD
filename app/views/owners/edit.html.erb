<section id="property-owner" class="container-fluid">
    <div class="row">
        <div class="col-10 col-sm-9 col-md-8 col-lg-7 col-xl-6 mx-auto">
            <h5 class="text-center display-3 mt-3">Dueño de la propiedad</h5>
            <div class="form-owner">
                <%= form_for :owner, url: owner_update_path(@owner.id), class: "border bg-light shadow my-5 rounded p-5" do |f| %>
                <div class="form-group">
                    <!-- Quitar nombre y poner reseña del propietario y agregar una caja de comentarios que cualquiera puede agregar comentarios -->
                    <%= f.label "Nombre del propietario", class: "form-label" %><br/>
                    <%= f.text_field :name, class: "form-control", required: true %>
                </div>
                <div class="form-group">
                    <%= f.label "Atención", class: "form-label" %><br/>
                    <%= f.select :atention, (1..5).to_a, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label "Respuesta", class: "form-label" %><br/>
                    <%= f.select :respuesta, (1..5).to_a, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label "Amabilidad", class: "form-label" %><br/>
                    <%= f.select :amabilidad, (1..5).to_a, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.submit "Agregar Propiedad", class: "btn btn-blue mt-3" %>
                </div>
                <% end %>
            </div>

        </div>
    </div>
</section>